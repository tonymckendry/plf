extends ../layout

block content
  br
  div#tourHead
    p Upcoming Tour Dates
  br
  each val, index in result
    div(class='tourDate')
      div(class='tourDateLeft')
        - var date = result[index].date
        - date = date.toString();
        - date = date.slice(0,15);
        - var time = result[index].time
        - var hours24 = parseInt(time.substring(0,2),10)
        - var hours = ((hours24 + 11) % 12) + 1
        - var amPm = hours24 > 11 ? 'pm' : 'am'
        - var minutes = time.substring(2,5)
        - time = hours + minutes + amPm
        p#tourDate 
          b Date: 
            span#tourText #{date}
        p#tourLocation 
          b Location: 
            span#tourText #{result[index].city}, #{result[index].state}, #{result[index].country}
      div(class='tourDateRight')  
        p#tourVenue 
            span#tourText #{result[index].venue}
      div(class='tourTime')
        p#tourTime 
          b Time: 
            span#tourText #{time}
        
