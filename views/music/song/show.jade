extends ../../layout
block content
  div#header
    a(href='/')
      img(src="/images/plLogo.png")
  div#nav
    ul
      a(href='/music')
        li#firstNav Music
      li Pictures
      li Videos
      a(href='/tour')
        li Calendar
      li Archive
      li Market
      li Forum 
      li Blog
  br
  div#albumHeader
    p #{results[0].song}
  div#albumHeader
    p Total times played: #{results.length}
  each val, index in results
    div(class='tourDate')
      div(class='tourDateLeft')
        - var date = results[index].date
        - date = date.toString();
        - date = date.slice(0,15);
        p#tourDate 
          b Date: 
            span#tourText #{date}
        p#tourLocation 
          b Location: 
            span#tourText #{results[index].city}, #{results[index].state}, #{results[index].country}
      div(class='tourDateRight')  
        p#tourVenue 
            span#tourText #{results[index].venue}
      div(class='tourTime')
        p#tourTime 
          b Event: 
            span#tourText #{results[index].title}
  div(class='tourBottom')
    p 
